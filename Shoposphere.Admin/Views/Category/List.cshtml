@model IEnumerable<Shoposphere.Admin.Models.CategoryViewModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div class="row">
    <div class="col-6"><h2>Category List</h2></div>
    <div class="col-6">
        <a asp-action="Add" class="btn btn-cyan d-none d-md-inline-block text-white float-end">Add Category</a>
    </div>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
       
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>

            <td>
                @*<img style="width:50%" src="data:image;base64, @item.PictureStr" />*@
                <img style="width:50%" src="data:image;base64, @item.PictureStr" />
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                @Html.ActionLink("Details", "List", "Product", new { item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
